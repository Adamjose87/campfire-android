<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".ManageDownloadsBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.managedownloads.ManageDownloadsViewModel" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.home.HomeActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/menu_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/home_menu"
                        android:onClick="@{() -> viewModel.showMenu()}"
                        android:padding="@dimen/action_button_padding"
                        app:srcCompat="@drawable/ic_menu_24dp" />

                    <ImageView
                        android:id="@+id/delete_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/action_button_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/history_clear"
                        android:onClick="@{() -> viewModel.onDeleteAllButtonClicked()}"
                        android:padding="@dimen/action_button_padding"
                        android:visibility="@{viewModel.shouldShowDeleteAllButton}"
                        app:srcCompat="@drawable/ic_delete_24dp" />

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="40dp"
                        android:layout_toStartOf="@id/delete_all"
                        app:subtitle="@{@string/manage_downloads_total_size(viewModel.totalFileSize)}"
                        app:title="@string/home_manage_downloads"
                        tools:subtitle="Total size: 16 MB" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/playlist_content_bottom_margin"
            app:adapter="@{viewModel.adapter}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_song_info" />

    </android.support.design.widget.CoordinatorLayout>

</layout>