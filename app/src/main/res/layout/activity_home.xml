<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".HomeBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.HomeViewModel" />

        <import type="com.pandulapeter.campfire.feature.home.HomeViewModel.NavigationItem" />

        <import type="android.view.View" />

    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".feature.home.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_navigation" />

            <!--TODO: BottomNavigation and Toolbar should slide out when the user is scrolling. -->

            <android.support.design.widget.BottomNavigationView
                android:id="@id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary"
                app:itemIconTint="@color/selector_home_navigation"
                app:itemTextColor="@android:color/white"
                app:menu="@menu/home" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:fitsSystemWindows="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/content_padding"
                android:paddingEnd="@dimen/first_keyline"
                android:paddingStart="@dimen/first_keyline"
                android:paddingTop="@dimen/content_padding"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        android:text="@string/home_sort_by"
                        android:visibility="@{viewModel.selectedItem == NavigationItem.FAVORITES ? View.GONE : View.VISIBLE}" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_content_padding"
                        android:checked="@={viewModel.isSortedByTitle}"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/content_padding"
                        android:text="@string/home_sort_by_title"
                        android:visibility="@{viewModel.selectedItem == NavigationItem.FAVORITES ? View.GONE : View.VISIBLE}" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        android:checked="@={!viewModel.isSortedByTitle}"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/content_padding"
                        android:text="@string/home_sort_by_artist"
                        android:visibility="@{viewModel.selectedItem == NavigationItem.FAVORITES ? View.GONE : View.VISIBLE}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        android:text="@string/home_filter_by_language" />

                    <!--TODO: Checkboxes for language filters need to be inflated dynamically. -->
                    <!--TODO: Checkboxes don't do anything at the moment. -->

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_content_padding"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/content_padding"
                        android:text="@string/language_english" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/content_padding"
                        android:text="@string/language_hungarian" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        android:text="@string/home_other" />

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_content_padding"
                        android:checked="@={viewModel.shouldHideExplicit}"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/content_padding"
                        android:text="@string/home_hide_explicit_songs" />

                </LinearLayout>

            </ScrollView>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.DrawerLayout>

</layout>