<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".HomeBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.HomeViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.home.HomeActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:gravity="center"
            android:text="@{viewModel.text}"
            tools:text="Text" />

        <android.support.design.widget.BottomNavigationView
            android:id="@id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary"
            app:itemIconTint="@color/selector_home_navigation"
            app:itemTextColor="@color/selector_home_navigation"
            app:menu="@menu/home_navigation" />

    </RelativeLayout>

</layout>