<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".PlaylistBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.old.feature.home.playlist.PlaylistViewModel" />

        <import type="com.pandulapeter.campfire.R" />

    </data>

    <com.pandulapeter.campfire.old.feature.shared.widget.ContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="false">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fitsSystemWindows="true"
            android:transitionGroup="false">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ActionBar"
                android:transitionGroup="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:animateLayoutChanges="true"
                    android:clipChildren="false">

                    <android.support.v4.widget.Space
                        android:id="@+id/space"
                        android:layout_width="@dimen/toolbar_first_keyline_fix"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toStartOf="parent" />

                    <com.pandulapeter.campfire.old.feature.shared.widget.AppBarButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/first_keyline"
                        android:contentDescription="@string/home_menu"
                        android:onClick="@{() -> viewModel.showMenu()}"
                        app:animation="@{R.drawable.avd_back_to_menu_24dp}"
                        app:forcePlay="@{viewModel.shouldPlayReturnAnimation}"
                        app:lastFrame="@{@drawable/ic_menu_24dp}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/space"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/avd_menu_to_back_24dp" />

                    <com.pandulapeter.campfire.old.feature.shared.widget.AppBarButton
                        android:id="@+id/edit_mode_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@{viewModel.isInEditMode ? @string/playlist_done : @string/playlist_edit}"
                        android:onClick="@{() -> viewModel.toggleEditMode()}"
                        app:animation="@{viewModel.isInEditMode ? R.drawable.avd_edit_to_done_24dp : R.drawable.avd_done_to_edit_24dp}"
                        app:lastFrame="@{viewModel.isInEditMode ? @drawable/ic_done_24dp : @drawable/ic_edit_24dp}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:visibility="@{viewModel.shouldShowEditButton}"
                        tools:src="@drawable/avd_done_to_edit_24dp" />

                    <com.pandulapeter.campfire.old.feature.shared.widget.AppBarButton
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/playlist_share"
                        android:onClick="@{() -> viewModel.onShareButtonClicked()}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/edit_mode_toggle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_share_24dp"
                        app:visibility="@{viewModel.shouldShowShareButton}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:layout_marginStart="@dimen/second_keyline"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/share"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:subtitle="@{@plurals/playlist_song_count(viewModel.songCount, viewModel.songCount)}"
                        app:title="@{viewModel.title}"
                        app:visibility="@{!viewModel.isCustomPlaylist || !viewModel.isInEditMode}"
                        tools:text="Favorites"
                        tools:visibility="gone" />

                    <android.support.v4.widget.Space
                        android:id="@+id/space_2"
                        android:layout_width="@dimen/edit_text_fix"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toStartOf="parent" />

                    <EditText
                        android:id="@+id/input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:layout_marginStart="@dimen/second_keyline"
                        android:hint="@string/playlist_enter_title"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLength="@integer/playlist_name_length_limit"
                        android:maxLines="1"
                        android:text="@={viewModel.editedTitle}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/share"
                        app:layout_constraintStart_toStartOf="@id/space_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:visibility="@{viewModel.isCustomPlaylist &amp;&amp; viewModel.isInEditMode}" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionGroup="true"
                app:adapter="@{viewModel.adapter}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:listitem="@layout/item_song_info" />

            <com.pandulapeter.campfire.old.feature.shared.widget.PlaceholderView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{() -> viewModel.navigateToLibrary()}"
                app:buttonText="@string/go_to_library"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:text="@string/playlist_placeholder"
                app:visibility="@{viewModel.shouldShowPlaceholder}" />

        </android.support.design.widget.CoordinatorLayout>

    </com.pandulapeter.campfire.old.feature.shared.widget.ContainerView>

</layout>