<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".SettingsBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.settings.SettingsViewModel" />

        <import type="com.pandulapeter.campfire.R" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.pandulapeter.campfire.feature.shared.FixedAppBarBehavior">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:clipChildren="false"
                    app:isScrollEnabled="@{viewModel.shouldAllowToolbarScrolling}">

                    <android.support.v4.widget.Space
                        android:id="@+id/space"
                        android:layout_width="@dimen/toolbar_first_keyline_fix"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toStartOf="parent" />

                    <com.pandulapeter.campfire.feature.shared.widget.AppBarButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/first_keyline"
                        android:contentDescription="@string/home_menu"
                        android:onClick="@{() -> viewModel.showMenu()}"
                        app:animation="@{R.drawable.avd_back_to_menu_24dp}"
                        app:forcePlay="@{viewModel.shouldPlayReturnAnimation}"
                        app:lastFrame="@{@drawable/ic_menu_24dp}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/space"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/avd_menu_to_back_24dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:layout_marginStart="@dimen/second_keyline"
                        android:text="@string/home_settings"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingBottom="@dimen/content_padding"
                android:paddingTop="@dimen/content_padding"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/first_keyline"
                    android:paddingStart="@dimen/toolbar_action_button_margin_fix">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.shouldShowChords}"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/touch_target"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/settings_checkbox_padding"
                        app:description="@{viewModel.shouldShowChords ? @string/settings_show_chords_checked : @string/settings_show_chords_unchecked}"
                        app:title="@{@string/settings_should_show_chords}"
                        tools:text="@string/settings_should_show_chords" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.shouldUseGermanNotation}"
                        android:enabled="@{viewModel.shouldShowChords}"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/touch_target"
                        android:paddingEnd="@dimen/content_padding"
                        android:paddingStart="@dimen/settings_checkbox_padding"
                        app:description="@{viewModel.shouldUseGermanNotationDescription}"
                        app:title="@{@string/settings_should_use_german_notation}"
                        tools:text="@string/settings_should_use_german_notation" />

                </LinearLayout>

            </ScrollView>

        </android.support.design.widget.CoordinatorLayout>

    </FrameLayout>

</layout>