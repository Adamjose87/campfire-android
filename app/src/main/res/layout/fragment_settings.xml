<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".SettingsBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.settings.SettingsViewModel" />

        <import type="com.pandulapeter.campfire.R" />

    </data>

    <com.pandulapeter.campfire.feature.shared.widget.ContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="false">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:transitionGroup="false">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ActionBar"
                android:transitionGroup="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:clipChildren="false"
                    app:isScrollEnabled="@{viewModel.shouldAllowToolbarScroll}">

                    <android.support.v4.widget.Space
                        android:id="@+id/space"
                        android:layout_width="@dimen/toolbar_first_keyline_fix"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toStartOf="parent" />

                    <com.pandulapeter.campfire.feature.shared.widget.AppBarButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/first_keyline"
                        android:contentDescription="@string/home_menu"
                        android:onClick="@{() -> viewModel.showMenu()}"
                        app:animation="@{R.drawable.avd_back_to_menu_24dp}"
                        app:forcePlay="@{viewModel.shouldPlayReturnAnimation}"
                        app:lastFrame="@{@drawable/ic_menu_24dp}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/space"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/avd_menu_to_back_24dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:layout_marginStart="@dimen/second_keyline"
                        android:gravity="center_vertical"
                        android:text="@string/home_settings"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingBottom="@dimen/content_padding"
                android:scrollbars="none"
                android:transitionGroup="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/content_padding"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        app:contentPadding="@dimen/content_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/settings_label_margin"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/settings_chords"
                                android:textColor="@color/accent" />

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/settings_checkbox_margin"
                                android:checked="@={viewModel.shouldShowChords}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                android:paddingEnd="@dimen/content_padding"
                                android:paddingStart="@dimen/settings_checkbox_padding"
                                app:description="@{viewModel.shouldShowChords ? @string/settings_show_chords_checked : @string/settings_show_chords_unchecked}"
                                app:title="@{@string/settings_should_show_chords}"
                                tools:text="@string/settings_should_show_chords" />

                            <com.pandulapeter.campfire.feature.shared.widget.DividerView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height"
                                android:layout_marginStart="@dimen/settings_divider_margin" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/settings_checkbox_margin"
                                android:checked="@={!viewModel.shouldUseGermanNotation}"
                                android:enabled="@{viewModel.shouldShowChords}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                android:paddingEnd="@dimen/content_padding"
                                android:paddingStart="@dimen/settings_checkbox_padding"
                                app:description="@{viewModel.englishNotationExample}"
                                app:title="@{@string/settings_english_notation}"
                                tools:text="@string/settings_english_notation" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/settings_checkbox_margin"
                                android:checked="@={viewModel.shouldUseGermanNotation}"
                                android:enabled="@{viewModel.shouldShowChords}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                android:paddingEnd="@dimen/content_padding"
                                android:paddingStart="@dimen/settings_checkbox_padding"
                                app:description="@{viewModel.germanNotationExample}"
                                app:title="@{@string/settings_german_notation}"
                                tools:text="@string/settings_german_notation" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        app:contentPadding="@dimen/content_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/settings_label_margin"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/settings_behavior"
                                android:textColor="@color/accent" />

                            <Switch
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/first_keyline"
                                android:checked="@={viewModel.shouldEnableAutoScroll}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                app:description="@{viewModel.shouldEnableAutoScroll ? @string/settings_auto_scroll_enabled : @string/settings_auto_scroll_disabled}"
                                app:title="@{@string/settings_auto_scroll}"
                                tools:text="@string/settings_auto_scroll" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding"
                        app:contentPadding="@dimen/content_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/settings_label_margin"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/settings_appearance"
                                android:textColor="@color/accent" />

                            <Switch
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/first_keyline"
                                android:checked="@={viewModel.shouldUseDarkTheme}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                app:description="@{viewModel.shouldUseDarkTheme ? @string/settings_use_dark_theme_enabled : @string/settings_use_dark_theme_disabled}"
                                app:title="@{@string/settings_use_dark_theme}"
                                tools:text="@string/settings_use_dark_theme" />

                            <Switch
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/first_keyline"
                                android:checked="@={viewModel.shouldAllowToolbarScroll}"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                app:description="@{viewModel.shouldAllowToolbarScroll ? @string/settings_allow_toolbar_scroll_enabled : @string/settings_allow_toolbar_scroll_disabled}"
                                app:title="@{@string/settings_allow_toolbar_scroll}"
                                tools:text="@string/settings_allow_toolbar_scroll" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/settings_label_margin"
                                android:fontFamily="sans-serif-medium"
                                android:paddingEnd="@dimen/content_padding"
                                android:paddingStart="@dimen/content_padding"
                                android:paddingTop="@dimen/content_padding"
                                android:text="@string/settings_other"
                                android:textColor="@color/accent" />

                            <TextView
                                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/content_padding"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/touch_target"
                                android:onClick="@{() -> viewModel.onResetHintsClicked()}"
                                android:padding="@dimen/content_padding"
                                app:description="@{@string/settings_reset_hints_description}"
                                app:title="@{@string/settings_reset_hints}"
                                tools:text="@string/settings_reset_hints" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

    </com.pandulapeter.campfire.feature.shared.widget.ContainerView>

</layout>