<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".NewPlaylistBinding" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingTop="@dimen/large_content_padding"
        android:scrollbars="none">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/playlist_enter_title"
            android:paddingEnd="@dimen/new_playlist_input_padding_end"
            android:paddingStart="@dimen/new_playlist_input_padding_start"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLength="@integer/playlist_name_length_limit"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    </ScrollView>

</layout>