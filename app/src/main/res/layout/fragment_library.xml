<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".LibraryBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.library.LibraryViewModel" />

        <import type="com.pandulapeter.campfire.R" />

    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinator_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar_height"
                        android:animateLayoutChanges="true"
                        android:clipChildren="false"
                        app:isScrollEnabled="@{viewModel.shouldAllowToolbarScrolling}">

                        <android.support.v4.widget.Space
                            android:id="@+id/space"
                            android:layout_width="@dimen/toolbar_first_keyline_fix"
                            android:layout_height="0dp"
                            app:layout_constraintEnd_toStartOf="parent" />

                        <com.pandulapeter.campfire.feature.shared.widget.AppBarButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/first_keyline"
                            android:contentDescription="@string/home_menu"
                            android:onClick="@{() -> viewModel.showMenu()}"
                            app:animation="@{R.drawable.avd_back_to_menu_24dp}"
                            app:forcePlay="@{viewModel.shouldPlayReturnAnimation}"
                            app:lastFrame="@{@drawable/ic_menu_24dp}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/space"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@drawable/avd_menu_to_back_24dp" />

                        <com.pandulapeter.campfire.feature.shared.widget.AppBarButton
                            android:id="@+id/view_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/library_view_options"
                            android:onClick="@{() -> viewModel.showViewOptions()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_view_options_24dp"
                            app:visibility="@{viewModel.isLibraryNotEmpty}" />

                        <com.pandulapeter.campfire.feature.shared.widget.AppBarButton
                            android:id="@+id/search_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@{viewModel.isSearchInputVisible ? @string/library_close : @string/library_search}"
                            android:onClick="@{() -> viewModel.showOrHideSearchInput()}"
                            app:animation="@{viewModel.isSearchInputVisible ? R.drawable.avd_search_to_close_24dp : R.drawable.avd_close_to_search_24dp}"
                            app:lastFrame="@{viewModel.isSearchInputVisible ? @drawable/ic_close_24dp : @drawable/ic_search_24dp}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/view_options"
                            app:layout_constraintTop_toTopOf="parent"
                            app:visibility="@{viewModel.isLibraryNotEmpty}"
                            tools:src="@drawable/avd_close_to_search_24dp" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/toolbar_action_button_margin_fix"
                            android:layout_marginStart="@dimen/second_keyline"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/search_toggle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:subtitle="@{@string/library_song_count(viewModel.filteredItemCount)}"
                            app:title="@{@string/home_library}"
                            app:visibilityHide="@{!viewModel.isSearchInputVisible}"
                            tools:text="Library\n50 / 100 songs" />

                        <android.support.v4.widget.Space
                            android:id="@+id/space_2"
                            android:layout_width="@dimen/edit_text_fix"
                            android:layout_height="0dp"
                            app:layout_constraintEnd_toStartOf="parent" />

                        <EditText
                            android:id="@+id/query"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/toolbar_action_button_margin_fix"
                            android:layout_marginStart="@dimen/second_keyline"
                            android:hint="@string/library_search"
                            android:inputType="textCapWords|textFilter"
                            android:maxLength="@integer/search_query_limit"
                            android:text="@={viewModel.searchQuery}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/search_toggle"
                            app:layout_constraintStart_toStartOf="@id/space_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:visibility="@{viewModel.isSearchInputVisible}"
                            tools:visibility="gone" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.design.widget.AppBarLayout>

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:adapter="@{viewModel.adapter}"
                        tools:listitem="@layout/item_song_info" />

                </android.support.v4.widget.SwipeRefreshLayout>

                <com.pandulapeter.campfire.feature.shared.widget.PlaceholderView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:text="@{viewModel.placeholderText}"
                    app:visibility="@{viewModel.shouldShowPlaceholder}" />

            </android.support.design.widget.CoordinatorLayout>

        </FrameLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="@dimen/view_options_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingTop="@dimen/navigation_view_top_padding"
            app:menu="@menu/library" />

    </android.support.v4.widget.DrawerLayout>

</layout>