<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".SongInfoBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.shared.songInfoList.SongInfoViewModel" />

        <import type="com.pandulapeter.campfire.R" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@{viewModel.isSongDownloaded ? @color/card_song_downloaded : @color/card_song_not_downloaded}"
        app:contentPadding="@dimen/content_padding">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <android.support.v4.widget.Space
                android:id="@+id/space_1"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="parent" />

            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/playlist_drag_to_rearrange"
                android:padding="@dimen/content_padding"
                app:layout_constraintEnd_toEndOf="@id/space_1"
                app:srcCompat="@drawable/ic_drag_handle_24dp"
                app:visibility="@{viewModel.shouldShowDragHandle}" />

            <android.support.v4.widget.Space
                android:id="@+id/space_2"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/drag_handle" />

            <ImageView
                android:id="@+id/playlist_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/manage_playlists"
                android:padding="@dimen/content_padding"
                app:animation="@{viewModel.isSongOnAnyPlaylist ? R.drawable.avd_added_to_playlists_24dp : R.drawable.avd_removed_from_playlists_24dp}"
                app:lastFrame="@{viewModel.isSongOnAnyPlaylist ? @drawable/ic_playlist_24dp : @drawable/ic_playlist_border_24dp}"
                app:layout_constraintEnd_toEndOf="@id/space_2"
                app:visibility="@{viewModel.shouldShowPlaylistButton}"
                tools:src="@drawable/ic_playlist_24dp" />

            <android.support.v4.widget.Space
                android:id="@+id/space_3"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/playlist_action" />

            <!-- The extra containers are needed to avoid a glitch of the ripple effect. -->

            <FrameLayout
                android:id="@+id/download_action_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/space_3"
                app:visibility="@{viewModel.shouldShowDownloadButton}">

                <ViewSwitcher
                    android:id="@+id/download_action_switcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:displayedChild="@{viewModel.isSongLoading ? 0 : 1}">

                    <ProgressBar
                        android:layout_width="@dimen/loading_indicator_size"
                        android:layout_height="@dimen/loading_indicator_size"
                        android:layout_gravity="center"
                        android:indeterminateTint="@android:color/white"
                        android:padding="@dimen/content_padding" />

                    <ImageView
                        android:id="@+id/download_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@{viewModel.isSongDownloaded ? @string/update : @string/download}"
                        android:padding="@dimen/content_padding"
                        app:srcCompat="@drawable/ic_download_24dp" />

                </ViewSwitcher>

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="@{viewModel.isSongDownloaded ? 1f : 0.8f }"
                android:lineSpacingExtra="2dp"
                app:layout_constraintEnd_toStartOf="@id/download_action_container"
                app:layout_constraintStart_toStartOf="parent"
                app:songArtist="@{viewModel.songInfo.artist}"
                app:songExtra="@{viewModel.alertText}"
                app:songTitle="@{viewModel.songInfo.title}"
                tools:text="Song title\nArtist" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>