<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.home.HomeActivity">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".SongInfoBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.shared.songlistfragment.list.SongInfoViewModel" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@{viewModel.isDownloaded ? @color/card_song_downloaded : @color/card_song_not_downloaded}"
        app:contentPadding="@dimen/content_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/primary_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@{viewModel.primaryActionContentDescription}"
                android:drawable="@{viewModel.primaryActionDrawable}"
                android:padding="@dimen/content_padding"
                tools:src="@drawable/ic_playlist_border_24dp" />

            <ImageView
                android:id="@+id/secondary_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/primary_action"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@{viewModel.secondaryActionContentDescription}"
                android:drawable="@{viewModel.secondaryActionDrawable}"
                android:padding="@dimen/content_padding"
                tools:src="@drawable/ic_download_24dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/secondary_action"
                android:alpha="@{viewModel.isDownloaded ? 1f : 0.8f }"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="3"
                android:text="@{viewModel.songInfo.title}"
                tools:text="Song title" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/card_text_margin"
                android:layout_toStartOf="@id/secondary_action"
                android:alpha="@{viewModel.isDownloaded ? 1f : 0.5f }"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="@{viewModel.songInfo.artist}"
                tools:text="Artist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/artist"
                android:layout_marginTop="@dimen/card_text_margin"
                android:text="@{viewModel.alertText}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/accent"
                tools:text="Alert" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>