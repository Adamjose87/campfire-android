<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.home.HomeActivity">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".SongInfoBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.shared.songlistfragment.list.SongInfoViewModel" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@{viewModel.isSongDownloaded ? @color/card_song_downloaded : @color/card_song_not_downloaded}"
        app:contentPadding="@dimen/content_padding">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <android.support.v4.widget.Space
                android:id="@+id/space_1"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="parent" />

            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/playlist_drag_to_rearrange"
                android:padding="@dimen/content_padding"
                android:visibility="@{viewModel.shouldShowDragHandle}"
                app:layout_constraintEnd_toEndOf="@id/space_1"
                app:srcCompat="@drawable/ic_drag_handle_24dp" />

            <android.support.v4.widget.Space
                android:id="@+id/space_2"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/drag_handle" />

            <ImageView
                android:id="@+id/playlist_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/manage_playlists"
                android:padding="@dimen/content_padding"
                android:visibility="@{viewModel.shouldShowPlaylistButton}"
                app:animation="@{viewModel.isSongOnAnyPlaylist ? @drawable/avd_added_to_playlists_24dp : @drawable/avd_removed_from_playlists_24dp}"
                app:layout_constraintEnd_toEndOf="@id/space_2"
                tools:src="@drawable/ic_playlist_24dp" />

            <android.support.v4.widget.Space
                android:id="@+id/space_3"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/playlist_action" />

            <!--TODO: Animate transition. -->

            <ViewSwitcher
                android:id="@+id/download_action_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="@{!viewModel.isSongLoading}"
                android:visibility="@{viewModel.shouldShowDownloadButton}"
                app:displayedChild="@{viewModel.isSongLoading ? 0 : 1}"
                app:layout_constraintEnd_toEndOf="@id/space_3">

                <ProgressBar
                    android:layout_width="@dimen/loading_indicator_size"
                    android:layout_height="@dimen/loading_indicator_size"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:indeterminateTint="@android:color/white"
                    android:padding="@dimen/content_padding" />

                <ImageView
                    android:id="@+id/download_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@{viewModel.isSongDownloaded ? @string/update : @string/download}"
                    android:padding="@dimen/content_padding"
                    app:srcCompat="@drawable/ic_download_24dp" />

            </ViewSwitcher>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="@{viewModel.isSongDownloaded ? 1f : 0.8f }"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="3"
                android:text="@{viewModel.songInfo.title}"
                app:layout_constraintEnd_toStartOf="@id/download_action_container"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Song title" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_text_margin"
                android:alpha="@{viewModel.isSongDownloaded ? 1f : 0.5f }"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="@{viewModel.songInfo.artist}"
                app:layout_constraintEnd_toStartOf="@id/download_action_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="Artist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_text_margin"
                android:text="@{viewModel.alertText}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/accent"
                app:layout_constraintTop_toBottomOf="@id/artist"
                tools:text="Alert" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>