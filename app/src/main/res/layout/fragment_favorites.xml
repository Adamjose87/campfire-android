<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".FavoritesBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.campfire.feature.home.favorites.FavoritesViewModel" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.home.HomeActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">

                    <ImageView
                        android:id="@+id/view_options_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/action_button_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/home_view_options"
                        android:padding="@dimen/action_button_padding"
                        app:srcCompat="@drawable/ic_view_options_24dp" />

                    <ImageView
                        android:id="@+id/shuffle_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:onClick="@{() -> viewModel.shuffleItems()}"
                        android:layout_marginEnd="@dimen/content_padding"
                        android:layout_toStartOf="@id/view_options_icon"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/favorites_shuffle"
                        android:padding="@dimen/action_button_padding"
                        app:srcCompat="@drawable/ic_shuffle_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/view_options_icon"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/home_navigation_favorites"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{viewModel.adapter}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_song_info" />

    </android.support.design.widget.CoordinatorLayout>

</layout>