<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Campfire" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?android:attr/colorBackgroundFloating</item>
        <item name="colorPrimaryDark">?android:attr/colorBackgroundFloating</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:buttonTint">@color/compound_button</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@color/navigation_bar_shadow</item>
    </style>

    <style name="Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?android:attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?android:attr/colorBackgroundFloating</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButton</item>
        <item name="android:background">?android:attr/colorBackgroundFloating</item>
    </style>

</resources>