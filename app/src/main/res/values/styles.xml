<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Section">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Hint">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Chord" parent="Hint">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:paddingStart">@dimen/first_keyline</item>
        <item name="android:paddingEnd">@dimen/first_keyline</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OptionsItem" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/options_about_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/touch_target</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:paddingEnd">@dimen/content_padding</item>
        <item name="android:paddingStart">@dimen/switch_content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>

</resources>