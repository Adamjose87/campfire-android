<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Hint" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Chord" parent="Hint">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption" />

</resources>